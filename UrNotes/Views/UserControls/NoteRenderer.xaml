<UserControl x:Class="UrNotes.Views.UserControls.NoteRenderer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UrNotes.Views.UserControls"
             xmlns:utilityUc="clr-namespace:UrNotes.Views.UserControls.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="{StaticResource Primary100Brush}" 
            BorderThickness="1" 
            CornerRadius="7"
            Background="{StaticResource Primary100Brush}">
        <Grid>
            <utilityUc:CustomRichTextBox></utilityUc:CustomRichTextBox>
        </Grid>
    </Border>
</UserControl>