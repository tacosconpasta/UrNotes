<Window
    x:Class="UrNotes.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UrNotes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:UrNotes.Views"
    mc:Ignorable="d"
    Title="UrNotes">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Title bar drag region height -->
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Custom draggable title bar area -->
        <Grid x:Name="AppTitleBar" Grid.Row="0">
        </Grid>

        <!-- Main content below -->
        <views:MainView Grid.Row="1" />
    </Grid>
</Window>
